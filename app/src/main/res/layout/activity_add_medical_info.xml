<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Medical Information"
            android:background="#42A5F5"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="16sp"

            android:layout_marginBottom="12dp"
            android:backgroundTintMode="src_in"/>
        <!-- Form Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical"
            android:padding="16dp"
            android:elevation="4dp"
            android:backgroundTint="#E3F2FD"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTintMode="src_in">

            <!-- Header -->


            <!-- Input Fields -->
            <EditText
                android:id="@+id/etFullName"
                android:hint="Full Name"
                style="@style/CustomEditText"/>

            <EditText
                android:id="@+id/etAge"
                android:hint="Age"
                android:inputType="number"
                style="@style/CustomEditText"/>

            <EditText
                android:id="@+id/etBloodGroup"
                android:hint="Blood Group"
                style="@style/CustomEditText"/>

            <EditText
                android:id="@+id/etAllergies"
                android:hint="Allergies (if any)"
                style="@style/CustomEditText"/>

            <EditText
                android:id="@+id/etConditions"
                android:hint="Existing Conditions"
                style="@style/CustomEditText"/>

            <EditText
                android:id="@+id/etMedications"
                android:hint="Medications Currently Taking"
                style="@style/CustomEditText"/>

            <EditText
                android:id="@+id/etDonor"
                android:hint="Are you an organ donor?"
                style="@style/CustomEditText"/>

            <EditText
                android:id="@+id/etInsuranceId"
                android:hint="Health Insurance ID (Optional)"
                style="@style/CustomEditText"/>

            <EditText
                android:id="@+id/etHeight"
                android:hint="Height"
                style="@style/CustomEditText"/>

            <EditText
                android:id="@+id/etWeight"
                android:hint="Weight"
                style="@style/CustomEditText"/>

            <Button
                android:id="@+id/btnSave"
                android:text="Save"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:backgroundTint="#42A5F5"
                android:layout_marginTop="16dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/save_button_bg"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>


