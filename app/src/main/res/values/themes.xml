<?xml version="1.0" encoding="utf-8"?>


   <resources xmlns:tools="http://schemas.android.com/tools">

      <style name="Theme.PulseID" parent="Theme.Material3.DayNight.NoActionBar">
         <!-- Only used by API 31+ -->
         <item name="android:windowSplashScreenBackground" tools:targetApi="31">@color/white</item>
         <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="31">@drawable/pidlogo</item>
         <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="31">@color/white</item>

         <!-- Required: fallback theme after splash -->
         <item name="postSplashScreenTheme">@style/Theme.PulseID.App</item>
      </style>

      <style name="Theme.PulseID.App" parent="Theme.Material3.DayNight.NoActionBar">
         <!-- your regular app theme -->
      </style>

</resources>